Package: musicXML
Type: Package
Title: Tools for Sonification using 'musicXML'
Version: 1.0.0
Authors@R: c(
    person("Benjamin", "Renard", email = "benjamin.renard@inrae.fr",role = c("aut", "cre","cph"),comment = c(ORCID = "0000-0001-8447-5430")),
